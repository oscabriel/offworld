{
	"name": "@offworld/sdk",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs"
		}
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:unit": "vitest run --exclude '**/*.integration.test.ts'",
		"test:integration": "vitest run src/__tests__/integration/",
		"test:smoke": "SMOKE_TESTS=1 vitest run --testNamePattern Smoke"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.2.3",
		"@offworld/types": "workspace:*",
		"@opencode-ai/sdk": "^1.1.10"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
