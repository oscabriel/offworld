{
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": "../backend/convex",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["../backend/convex/**/*.ts"],
	"exclude": [
		"../backend/convex/_generated",
		"../backend/convex/convex.config.ts"
	]
}
