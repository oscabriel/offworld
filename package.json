	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260109.0",
		"@offworld/config": "workspace:*",
		"@oxfmt/darwin-arm64": "^0.23.0",
		"oxfmt": "^0.23.0",
		"oxlint": "^1.38.0",
		"turbo": "^2.7.3",
		"typescript": "^5.9.3",
